# vim:fileencoding=utf-8:foldmethod=marker

# BEGIN_KITTY_FONTS
font_family      family="JetBrains Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
# 'Geist Mono' variable_name=GeistMono style=GeistMono-Regular features=ss03
# family='Geist Mono' style=GeistMono-Italic variable_name=GeistMonoItalic features='+ss03 +ss05'

# font_features FiraCode-Regular +cv02 +ss03
# font_features FiraCode-Bold    +cv02 +ss03
# font_features FiraCode-SemiBold    +cv02 +ss03
# font_features FiraCode-Medium  +cv02 +ss03
# font_features FiraCode-Retina  +cv02 +ss03
# font_features FiraCode-Light  +cv02 +ss03
font_size 11.0

map ctrl+shift+minus change_font_size all 11.0
map ctrl+shift+kp_subtract change_font_size all 11.0

map ctrl+shift+equal change_font_size all 13.0
map ctrl+shift+plus change_font_size all 13.0
map ctrl+shift+kp_add change_font_size all 13.0

disable_ligatures never

modify_font cell_height +2px

# cursor customization
## block / beam / underline
cursor_shape block 
cursor_blink_interval 0
cursor_stop_blinking_after 0
shell_integration no-cursor
# cursor_trail 9
# cursor_trail_start_threshold 3
# cursor_trail_decay    0.06  0.18 

# BEGIN_KITTY_THEME
# Kanagawa
include current-theme.conf
# END_KITTY_THEME
# wayland_titlebar_color system
hide_window_decorations yes

tab_bar_style powerline
tab_powerline_style round
tab_bar_edge bottom
tab_bar_align left
active_tab_font_style   bold
inactive_tab_font_style normal

tab_title_template "{index}"

# tab management
map ctrl+shift+t new_tab
map ctrl+shift+l next_tab
map ctrl+shift+h previous_tab
map ctrl+shift+q close_tab

# window management
map ctrl+shift+enter new_window_with_cwd
## uses vim binds
map ctrl+h neighboring_window left
map ctrl+l neighboring_window right
map ctrl+k neighboring_window up
map ctrl+j neighboring_window down
map ctrl+shift+k next_layout 

# tab management
map ctrl+shift+t new_tab_with_cwd

window_padding_width 6

shell fish
